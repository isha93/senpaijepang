{
  "name": "senpaijepang",
  "version": "0.1.0",
  "private": true,
  "description": "Verified Migration Infrastructure monorepo (MVP)",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "dependencies": {
    "js-yaml": "^4.1.1"
  },
  "engines": {
    "node": ">=22"
  },
  "scripts": {
    "dev:api": "npm run dev -w @senpaijepang/api",
    "dev:web-sdm": "npm run dev -w @senpaijepang/web-sdm",
    "dev:dashboard": "npm run dev -w @senpaijepang/dashboard",
    "dev:admin": "npm run dev -w @senpaijepang/admin",
    "deploy:staging": "node scripts/deploy-staging.mjs",
    "migrate:api": "npm run migrate -w @senpaijepang/api",
    "lint": "npm run lint --workspaces --if-present",
    "typecheck": "npm run typecheck --workspaces --if-present",
    "test": "npm run test --workspaces --if-present",
    "scan:sast": "node scripts/sast-check.mjs",
    "scan:secrets": "node scripts/secret-scan.mjs",
    "check:openapi": "node scripts/openapi-check.mjs",
    "ci:security": "npm run scan:sast && npm run scan:secrets && npm run check:openapi",
    "smoke:local": "bash scripts/smoke-local.sh",
    "smoke:api": "node scripts/smoke-api-flow.mjs",
    "ci": "npm run lint && npm run typecheck && npm run test && npm run ci:security"
  }
}
